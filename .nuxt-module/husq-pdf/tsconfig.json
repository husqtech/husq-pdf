{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "playground",
  ],
  "include": ["src/**/*", "nuxt.config.ts"]
}
